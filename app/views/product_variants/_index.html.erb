<% if product_variants.blank? %>
  <%= render(Components::Alerts::NotFound::Female.new(model: ProductVariant)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: product_variants,
        heads: [
          ta(ProductVariant, :product),
          ta(ProductVariant, :title),
          ta(ProductVariant, :price)
        ],
        columns: [
          :product_title,
          :title,
          :formatted_price
        ],
        actions: [Components::LinkTo::Edit, Components::LinkTo::Show, Components::LinkTo::Destroy]
      )) %>

  <%= render(Components::Pagination::Links.new(records: product_variants)) %>
<% end %>
