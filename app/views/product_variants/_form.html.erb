<%= render(Components::PageTitle::Form.new(record: product_variant, back_url: product_variants_path)) %>

<div class="flex flex-col gap-4 p-4 md:gap-6 md:p-6">
  <%= form_for(product_variant) do |form| %>
    <%= render(Components::Form::BelongsToField.new(form, :product, collection: Product.where(category_id: current_categories.ids).pluck(:title, :id))) %>

    <div class="pt-4 grid grid-cols-2 gap-4">
      <div class="col-span- 2">
        <%= render(Components::Form::TextField.new(form, :title)) %>
      </div>

      <div>
        <%= render(Components::Form::CurrencyField.new(form, :price)) %>
      </div>
    </div>

    <%= render(Components::Form::TextAreaField.new(form, :description)) %>

    <%= render(Components::Form::SubmitButton.new(form)) %>
  <% end %>
</div>
