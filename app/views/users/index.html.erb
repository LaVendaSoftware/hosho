<%= render(Components::PageTitle::Index.new(model: User, link: new_user_path, icon: "users")) %>

<% if @users.blank? %>
  <%= render(Components::Alerts::NotFound::Male.new(model: User)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: @users,
        heads: [
          ta(User, :name),
          ta(User, :email_address),
          ta(User, :role)
        ],
        columns: [
          :name,
          :email_address,
          :humanized_role
        ],
        actions: [Components::LinkTo::Edit, Components::LinkTo::Show]
      )) %>

  <%= render(Components::Pagination::Links.new(records: @users)) %>
<% end %>
