<%= render(Components::PageTitle::Index.new(model: Order, link: new_order_path, icon: "basket")) %>

<% if @orders.blank? %>
  <%= render(Components::Alerts::NotFound::Male.new(model: Order)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: @orders,
        heads: [
          ta(Order, :status),
          ta(Order, :customer_name),
          ta(Order, :customer_email_address)
        ],
        columns: [
          :humanized_status,
          :customer_name,
          :customer_email_address
        ],
        actions: [Components::LinkTo::Edit, Components::LinkTo::Show, Components::LinkTo::Destroy]
      )) %>

  <%= render(Components::Pagination::Links.new(records: @orders)) %>
<% end %>
