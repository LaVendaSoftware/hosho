<%= render(Components::PageTitle::Index.new(model: Product, link: new_product_path, icon: "shopping-bag-open")) %>

<% if @products.blank? %>
  <%= render(Components::Alerts::NotFound::Male.new(model: Product)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: @products,
        heads: [
          ta(Product, :category),
          ta(Product, :title)
        ],
        columns: [
          :category_title,
          :title
        ],
        actions: [Components::LinkTo::Edit, Components::LinkTo::Show, Components::LinkTo::Destroy]
      )) %>

  <%= render(Components::Pagination::Links.new(records: @products)) %>
<% end %>
