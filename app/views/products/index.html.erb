<%= render(Components::PageTitle::Index.new(model: Product, link: new_product_path, icon: nil)) %>

<% if @products.blank? %>
  <%= render(Components::Alerts::NotFound::Male.new(model: Product)) %>
  <%#= render(Components::Alerts::NotFound::Female.new(model: Product)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: @products,
        heads: [
          ta(Product, :category),
          ta(Product, :title)
        ],
        columns: [
          :category_title,
          :title
        ],
        actions: [:link_to_edit, :link_to_show, :link_to_destroy]
      )) %>

  <%= render(Components::Pagination::Links.new(records: @products)) %>
<% end %>
