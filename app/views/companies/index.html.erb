<%= render(Components::PageTitle::Index.new(model: Company, link: new_company_path, icon: "building-office")) %>

<% if @companies.blank? %>
  <%= render(Components::Alerts::NotFound::Female.new(model: Company)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: @companies,
        heads: [
          ta(Company, :name),
          ta(Company, :nif),
          ta(Company, :industry)
        ],
        columns: [
          :name,
          :nif,
          :humanized_industry
        ],
        actions: [Components::LinkTo::Edit, Components::LinkTo::Show]
      )) %>

  <%= render(Components::Pagination::Links.new(records: @companies)) %>
<% end %>
