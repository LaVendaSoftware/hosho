<%= render(Components::PageTitle::Index.new(model: Customer, link: new_customer_path, icon: "users")) %>

<% if @customers.blank? %>
  <%= render(Components::Alerts::NotFound::Male.new(model: Customer)) %>
<% else %>
  <%= render(Components::Table::Root.new(
        records: @customers,
        heads: [
          ta(Customer, :name),
          ta(Customer, :email_address),
          ta(Customer, :country_code),
          ta(Customer, :phone),
          ta(Customer, :document)
        ],
        columns: [
          :name,
          :email_address,
          :country_code,
          :phone,
          :document
        ],
        actions: [Components::LinkTo::Edit, Components::LinkTo::Show, Components::LinkTo::Destroy]
      )) %>

  <%= render(Components::Pagination::Links.new(records: @customers)) %>
<% end %>
